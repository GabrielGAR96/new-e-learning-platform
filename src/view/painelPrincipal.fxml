<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PainelPrincipalController">
   <effect>
      <InnerShadow/>
   </effect>
   <padding>
      <Insets bottom="5.0" left="3.0" right="3.0" top="3.0"/>
   </padding>
   <BorderPane fx:id="painelPrincipal" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
               minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" AnchorPane.leftAnchor="5.0"
               AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
      <center>

      </center>
      <bottom>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0"
               style="-fx-background-color: white;" BorderPane.alignment="CENTER">
            <JFXButton fx:id="cadastrarBtn" buttonType="RAISED" contentDisplay="TOP" defaultButton="true"
                       onAction="#abrirPainelCadastrar" ripplerFill="BLACK" style="-fx-background-color: #6a1b9a;"
                       text="Cadastros" textFill="WHITE">
               <font>
                  <Font name="Verdana Bold" size="12.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontAwesomeIcon fill="WHITE" iconName="PLUS" size="2em"/>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="registrosBtn" buttonType="RAISED" contentDisplay="TOP" defaultButton="true"
                       onAction="#abrirPainelRegistros" ripplerFill="BLACK" style="-fx-background-color: #6a1b9a;"
                       text="Registros" textFill="WHITE">
               <font>
                  <Font name="Verdana Bold" size="12.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontAwesomeIcon fill="WHITE" iconName="ARCHIVE" size="2em"/>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="avaliacaoBtn" buttonType="RAISED" contentDisplay="TOP" defaultButton="true"
                       ripplerFill="BLACK" style="-fx-background-color: #6a1b9a;" text="Avaliação" textFill="WHITE">
               <font>
                  <Font name="Verdana Bold" size="12.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontAwesomeIcon fill="WHITE" iconName="STAR" size="2em"/>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="avaliacaoBtn1" buttonType="RAISED" contentDisplay="TOP" defaultButton="true"
                       ripplerFill="BLACK" style="-fx-background-color: #6a1b9a;" text="Simulados" textFill="WHITE">
               <font>
                  <Font name="Verdana Bold" size="12.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontAwesomeIcon fill="WHITE" iconName="FILE" size="2em"/>
               </graphic>
            </JFXButton>
         </HBox>
      </bottom>
      <center>
         <BorderPane fx:id="painelSecundario" prefHeight="400.0" prefWidth="900.0"
                     style="-fx-background-color: #c7c7c7;" BorderPane.alignment="CENTER">
            <effect>
               <InnerShadow/>
            </effect>
         </BorderPane>
      </center>
      <top>
         <AnchorPane prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: white;"
                     BorderPane.alignment="CENTER">
            <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="14.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../img/logo.jpg"/>
            </ImageView>
            <JFXTextField fx:id="pesquisarField" focusColor="#6a1b9a" layoutX="161.0" layoutY="38.0"
                          prefHeight="25.0" prefWidth="282.0" promptText="Pesquisar" style="-jfx-label-float: true;"
                          unFocusColor="BLACK">
               <font>
                  <Font name="Georgia" size="15.0"/>
               </font>
            </JFXTextField>
            <FontAwesomeIcon fill="#c7c7c7" iconName="SEARCH" layoutX="420.0" layoutY="58.0" size="2em"/>
         </AnchorPane>
      </top>
   </BorderPane>
</AnchorPane>
